<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryTransparent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.AppCompat.appbar">
        <item name="android:textSize">@dimen/appbar</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mytoast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#000000</item>
        <item name="stSolidBackground">true</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/font</item>
    </style>

</resources>
